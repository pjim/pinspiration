backCol = #c6c7c2
highlight = #a67455
oppCol = #93a8ba
lightOne = #ebe9d4

body
  background-color backCol

.thing-form
    margin 20px 0

#banner
    border-bottom none
    margin-top -20px

#banner h1
    font-size 60px
    letter-spacing -1px
    line-height 1

.hero-unit
    background #4393B9
    color #F5F5F5
    padding 30px 15px
    position relative
    text-align center
    text-shadow 0 1px 0 rgba(0, 0, 0, 0.1)

.footer
    border-top 1px solid #E5E5E5
    margin-top 70px
    padding 30px 0
    text-align center

.navbar-text
    margin-left 15px

.masonry-brick
  border 1px solid black
  border-radius 20px
  padding 15px
  background-color highlight

div
  font-family 'Varela Round', 'sans-serif'
  color lightOne

.alt-text
   color oppCol

.pin-text
  text-align center

.navbar
  background-color oppCol
  color lightOne !important

.main-banner
  width:90%
  margin:auto 0
  background-color highlight
  border-radius 20px
  padding 20px
  font-size larger

.main-banner h1
  font-size 130px

.form-box
  background-color highlight
  border-radius 20px
  padding 15px

.spacer
  margin-top 20px
